{
  "name": "@bundlenudge/e2e",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "test:browser": "playwright test",
    "test:api": "vitest run --config vitest.api.config.ts",
    "test:api:watch": "vitest --config vitest.api.config.ts",
    "test:load": "k6 run load/scenarios/index.js",
    "test:soak": "k6 run load/scenarios/soak.js",
    "test:spike": "k6 run load/scenarios/spike.js",
    "test:stress": "k6 run load/scenarios/stress.js",
    "test:device:ios": "cd device && detox test --configuration ios.sim.release",
    "test:device:android": "cd device && detox test --configuration android.emu.release",
    "test:device:build:ios": "cd device && detox build --configuration ios.sim.release",
    "test:device:build:android": "cd device && detox build --configuration android.emu.release",
    "test:all": "pnpm test:api && pnpm test:browser"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "vitest": "^2.1.0",
    "@types/node": "^20.11.0",
    "typescript": "^5.7.0"
  },
  "optionalDependencies": {
    "detox": "^20.0.0",
    "@types/jest": "^29.5.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "ts-jest": "^29.1.0"
  }
}
