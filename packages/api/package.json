{
  "name": "@bundlenudge/api",
  "version": "0.0.1",
  "description": "BundleNudge API - Cloudflare Workers",
  "type": "module",
  "main": "./src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "build": "tsc",
    "deploy": "wrangler deploy",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "clean": "rm -rf dist .wrangler",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply bundlenudge-db"
  },
  "dependencies": {
    "@bundlenudge/shared": "workspace:*",
    "@hono/zod-validator": "^0.4.0",
    "hono": "^4.0.0",
    "drizzle-orm": "^0.30.0",
    "zod": "^3.23.0",
    "jose": "^5.2.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.0.0",
    "@types/node": "^20.0.0",
    "drizzle-kit": "^0.21.0",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0",
    "wrangler": "^3.0.0"
  },
  "license": "BSL-1.1"
}
