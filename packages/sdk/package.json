{
  "name": "@bundlenudge/sdk",
  "version": "0.0.1",
  "description": "React Native SDK for BundleNudge OTA updates",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./expo/plugin": {
      "import": "./dist/expo/plugin.mjs",
      "require": "./dist/expo/plugin.js",
      "types": "./dist/expo/plugin.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/expo/plugin.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts src/expo/plugin.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/"
  },
  "files": [
    "dist",
    "ios",
    "android",
    "app.plugin.js"
  ],
  "expo": {
    "plugins": ["./app.plugin.js"]
  },
  "peerDependencies": {
    "@react-native-async-storage/async-storage": ">=1.19.0",
    "react": ">=18.0.0",
    "react-native": ">=0.72.0"
  },
  "dependencies": {
    "@bundlenudge/shared": "workspace:*",
    "zod": "^3.23.0"
  },
  "optionalDependencies": {
    "@expo/config-plugins": ">=7.0.0"
  },
  "devDependencies": {
    "@expo/config-plugins": "^8.0.0",
    "@react-native-async-storage/async-storage": "^1.23.0",
    "@types/react": "^18.2.0",
    "@types/react-native": "^0.72.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
